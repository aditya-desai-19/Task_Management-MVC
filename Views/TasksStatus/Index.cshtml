@model List<Task_Management.ViewModels.TaskViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Task</th>
            <th scope ="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Assigned to</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td scope="row">@task.Name</td>
                <td scope="row">@task.Description</td>
                <td scope="row">@task.Status</td>
                <td scope="row">@task.StudentName</td>
                <td scope="row">
                    <button class="btn btn-warning" onclick="location.href = '@Url.Action("Edit", "TasksStatus", new { id = task.TaskId }, null)'">Edit</button>
                    <button class="btn btn-danger" onclick="location.href = '@Url.Action("Delete", "TasksStatus", new { id = task.TaskId }, null)'">Delete</button>
                </td>

            </tr>
        }
    </tbody>
</table>
