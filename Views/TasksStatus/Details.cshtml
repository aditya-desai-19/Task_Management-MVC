@model List<Task_Management.ViewModels.TaskViewModel>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tasks</h4>
    <hr />
    <table>
        <thead>Task</thead>
        <thead>Description</thead>
        <thead>Status</thead>
        <thead>Assigned to</thead>
        <tbody>
        @foreach(var task in Model)
        {
            <tr>
                <td>@task.TaskId</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>@task.StudentName</td>
            </tr>
        }
        </tbody>
    </table>
</div>
